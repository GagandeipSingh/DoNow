<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dateAsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/date_ascending"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tickAsc"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/selected"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:tint="#B3000000"
        app:layout_constraintStart_toEndOf="@id/dateAsc"
        app:layout_constraintTop_toTopOf="@+id/dateAsc"
        app:layout_constraintBottom_toBottomOf="@id/dateAsc"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dateDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_marginStart="30dp"
        android:text="@string/date_descending"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateAsc" />

    <ImageView
        android:id="@+id/tickDesc"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/selected"
        android:layout_marginStart="20dp"
        app:tint="#B3000000"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/dateDesc"
        app:layout_constraintTop_toTopOf="@+id/dateDesc"
        app:layout_constraintBottom_toBottomOf="@id/dateDesc"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
